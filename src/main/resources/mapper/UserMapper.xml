<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为UserServiceImpl接口方法提供sql语句配置 -->
<mapper namespace="com.graduate.dao.UserMapper">

    <select id="selectUser" resultType="User" parameterType="long">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="getUser" resultType="com.graduate.model.User" parameterType="java.util.Map">
        select * from user where 1=1
            <if test="username != null"> and login_account = #{username,jdbcType=VARCHAR}</if>
            <if test="password != null"> and password = #{password,jdbcType=VARCHAR}</if>
    </select>
</mapper>